# API Configuration
# For production, set EXPO_PUBLIC_API_BASE_URL to your production API URL
# EXPO_PUBLIC_API_BASE_URL=https://api.stormneighbor.app/api/v1
EXPO_PUBLIC_API_TIMEOUT=30000

# Weather Service
# Get your key from: https://openweathermap.org/api
EXPO_PUBLIC_OPENWEATHER_API_KEY=your_openweather_api_key_here

# App Environment
EXPO_PUBLIC_APP_ENV=development

# Push Notifications
EXPO_PUBLIC_PROJECT_ID=stormneighbor-app

# App Configuration
EXPO_PUBLIC_APP_NAME=StormNeighbor
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_BUNDLE_ID=com.stormneighbor.app

# Feature Flags
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false
EXPO_PUBLIC_ENABLE_LOCATION_SERVICES=true
EXPO_PUBLIC_ENABLE_IMAGE_UPLOADS=true
EXPO_PUBLIC_ENABLE_REAL_TIME_UPDATES=true

# URL Configuration
EXPO_PUBLIC_BASE_WEB_URL=https://dev.stormneighbor.app
EXPO_PUBLIC_APP_URL_SCHEME=stormneighbor
