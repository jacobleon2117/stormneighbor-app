# Server Configuration
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:19006

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/stormneighbor_db
DATABASE_SSL=false
DATABASE_SSL_REJECT_UNAUTHORIZED=false
DB_POOL_SIZE=5
DB_CONNECTION_TIMEOUT=10000
DB_IDLE_TIMEOUT=30000

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_chars
JWT_EXPIRES_IN=7d

# Email Service Configuration
RESEND_API_KEY=re_your_resend_api_key_here
FROM_EMAIL=onboarding@resend.dev
FROM_NAME=StormNeighbor

# Image Storage Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# Weather API Configuration
NOAA_API_BASE_URL=https://api.weather.gov

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Socket.IO Configuration (for real-time chat - coming next!)
SOCKET_CORS_ORIGIN=http://localhost:19006

# Caching Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=300000

# Monitoring & Error Tracking
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info

# Firebase Push Notifications Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id

# Optional: PostGIS Configuration
ENABLE_POSTGIS=true