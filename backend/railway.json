{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci && npm run build",
    "watchPatterns": [
      "**/*.js",
      "package.json",
      "package-lock.json"
    ]
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "DATABASE_SSL": "true",
        "DATABASE_SSL_REJECT_UNAUTHORIZED": "false"
      }
    },
    "staging": {
      "variables": {
        "NODE_ENV": "staging", 
        "DATABASE_SSL": "true",
        "DATABASE_SSL_REJECT_UNAUTHORIZED": "false"
      }
    }
  }
}