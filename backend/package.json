{
  "name": "weather-neighborhood-backend",
  "version": "1.0.0",
  "description": "Backend API for neighborhood weather emergency coordination app",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:debug": "nodemon --inspect src/server.js",
    "test": "NODE_ENV=test jest --verbose --detectOpenHandles --forceExit",
    "test:watch": "NODE_ENV=test jest --watch --verbose",
    "test:coverage": "NODE_ENV=test jest --coverage --verbose --forceExit",
    "lint": "eslint src/ tests/ --fix --ext .js",
    "lint:check": "eslint src/ tests/ --ext .js",
    "format": "prettier --write src/ tests/ *.js",
    "format:check": "prettier --check src/ tests/ *.js",
    "db:setup": "node scripts/test-setup.js schema",
    "db:test": "node scripts/test-setup.js",
    "db:migrate": "node src/scripts/migrate.js",
    "env:check": "node -e \"require('./src/config/validateEnv')()\"",
    "env:validate": "node src/scripts/validateEnv.js",
    "build": "echo \"Build step - validating environment\" && npm run env:check",
    "health:check": "node -e \"require('./src/app'); console.log('App loads successfully')\"",
    "health:full": "npm run health:check && npm run db:test",
    "security:audit": "npm audit --audit-level=moderate",
    "ci:test": "npm run lint:check && npm run format:check && npm run test:coverage",
    "backup:create": "node scripts/backup-manager.js create",
    "clean": "rm -rf node_modules coverage .nyc_output *.log",
    "reset": "npm run clean && npm install && npm run db:setup"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^13.4.0",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^1.9.0",
    "jsdom": "^26.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "resend": "^3.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json-summary"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/src/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 30000,
    "verbose": true,
    "detectOpenHandles": true,
    "forceExit": true,
    "maxWorkers": "50%"
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5",
    "tabWidth": 2,
    "printWidth": 100,
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "keywords": [
    "weather",
    "emergency",
    "neighborhood",
    "api",
    "nodejs",
    "express",
    "postgresql",
    "postgis",
    "real-time",
    "socket.io",
    "ci-cd",
    "backup"
  ],
  "author": "Jacob Leon",
  "license": "MIT",
  "engines": {
    "node": "20.17.0",
    "npm": ">=11.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jacobleon2117/stormneighbor-app.git"
  },
  "bugs": {
    "url": "https://github.com/jacobleon2117/stormneighbor-app/issues"
  },
  "homepage": "https://github.com/jacobleon2117/stormneighbor-app#readme"
}
