# BACKEND ENVIRONMENT TEMPLATE
# Copy this file to .env and fill in your values
# ⚠️ NEVER commit .env with real values to git

# Application Environment
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:19006
BASE_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=false
DB_POOL_SIZE=5
DB_CONNECTION_TIMEOUT=15000
DB_IDLE_TIMEOUT=30000

# JWT Security
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_minimum_64_characters_long_random_string
JWT_EXPIRES_IN=7d

# Security & Access Control
ADMIN_IP_WHITELIST=127.0.0.1
FORCE_HTTPS=false
FORCE_HTTPS_STAGING=true
FORCE_HTTPS_PROD=true
TRUSTED_PROXIES=127.0.0.1

# SSL Configuration (Production only)
SSL_CERT_PATH=/etc/ssl/certs/server.crt
SSL_KEY_PATH=/etc/ssl/private/server.key
SSL_CA_PATH=/etc/ssl/certs/ca-bundle.crt
ACME_ENABLED=false
ACME_DIRECTORY=/etc/letsencrypt/live
SSL_AUTO_RENEW=false
SSL_RENEWAL_DAYS=30

# Email Service (Resend)
# Get your key from: https://resend.com
RESEND_API_KEY=your_resend_api_key
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Your App Name

# Cloud Storage (Cloudinary)
# Get your credentials from: https://cloudinary.com
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Weather API
NOAA_API_BASE_URL=https://api.weather.gov

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS & Socket Configuration
SOCKET_CORS_ORIGIN=http://localhost:19006
ALLOWED_ORIGINS=http://localhost:19006,http://localhost:3000

# Cache Configuration
CACHE_TTL=300000
REDIS_URL=

# Logging Configuration
# LOG_LEVEL options: error, warn, info, debug
LOG_LEVEL=warn
# DISABLE_FILE_LOGGING=true

# Firebase Push Notifications
# Get your service account key from: https://console.firebase.google.com
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_PRIVATE_KEY_ID="your_private_key_id"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk@your-project.iam.gserviceaccount.com"
FIREBASE_CLIENT_ID="your_client_id"

# Backup Configuration
BACKUP_DIR=./backups
MAX_BACKUPS=30
BACKUP_COMPRESSION=true
BACKUP_REMOTE_UPLOAD=false
BACKUP_DAILY_SCHEDULE=0 2 * * *
BACKUP_WEEKLY_SCHEDULE=0 3 * * 0
BACKUP_MONTHLY_SCHEDULE=0 4 1 * *
BACKUP_S3_BUCKET=your-backups-bucket
